{
  "styles": {},
  "type": "APL",
  "version": "1.0",
  "theme": "light",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    },
    {
      "name": "alexa-styles",
      "version": "1.0.0"
    },
    {
      "name": "alexa-viewport-profiles",
      "version" : "1.0.0"
    }
  ],
  "resources": [
    {
      "colors": {
        "accent": "#C00",
        "text": "#333"
      },
      "dimensions": {
        "spacing": "8dp",
        "bodySize": "26dp",
        "titleSize": "40dp",
        "flagHeight": "50dp",
        "flagWidth": "100dp",
        "numberSize": "100dp"
      }
    },
    {
      "when": "${@viewportProfile == @hubLandscapeLarge}",
      "dimensions": {
        "bodySize": "36dp",
        "headingSize": "40dp",
        "hintSize": "34dp",
        "titleSize": "50dp"
      }
    },
    {
      "when": "${@viewportProfile == @tvLandscapeXLarge}",
      "dimensions": {
        "bodySize": "23dp",
        "headingSize": "27dp",
        "hintSize": "23dp",
        "titleSize": "38dp"
      }
    },
    {
      "when": "${@viewportProfile == @hubRoundSmall}",
      "dimensions": {
        "bodySize": "18dp",
        "headingSize": "22dp",
        "hintSize": "18dp",
        "titleSize": "25dp",
        "mainBorderWidth": "3dp"
      }
    }
  ],
  "layouts": {
    "HomePage": {
      "description": "Home page showing country buttons",
      "parameters": [
        {
          "name": "languages",
          "type": "any"
        }
      ],
      "items": [
        {
          "type": "Container",
          "height": "100vh",
          "items": [
            {
              "type": "Frame",
              "backgroundColor": "#FFFFFF66",
              "height": "15vh",
              "item": {
                "type": "Container",
                "justifyContent": "spaceBetween",
                "alignItems": "center",
                "direction": "row",
                "height": "100%",
                "paddingLeft": "5vw",
                "paddingRight": "5vw",
                "items": [
                  {
                    "type": "Text",
                    "color": "@text",
                    "fontSize": "@titleSize",
                    "textAlign": "${@viewportProfile != @hubRoundSmall ? 'auto' : 'center'}",
                    "text": "Poly Count",
                    "grow": 1
                  }
                ]
              }
            },
            {
              "type": "Container",
              "when": "${@viewportProfile != @hubRoundSmall}",
              "paddingTop": "5vh",
              "paddingBottom": "5vh",
              "paddingRight": "5vw",
              "paddingLeft": "5vw",
              "grow": 1,
              "direction": "row",
              "data": "${languages}",
              "numbered": true,
              "items": [
                {
                  "type": "TouchWrapper",
                  "spacing": "5vw",
                  "items": [
                      {
                      "type": "Container",
                      "alignItems": "center",
                      "items": [
                        {
                          "type": "Image",
                          "height": "@flagHeight",
                          "width": "@flagWidth",
                          "source": "https://decompil3d.github.io/county/${data.code}.png"
                        },
                        {
                          "type": "Text",
                          "text": "${data.name}",
                          "fontSize": "@bodySize",
                          "spacing": "10dp"
                        }
                      ]
                    }
                  ],
                  "onPress": {
                    "type": "SendEvent",
                    "arguments": [
                      "choosePage",
                      "${ordinal}"
                    ]
                  }
                }
              ]
            },
            {
              "type": "ScrollView",
              "when": "${@viewportProfile == @hubRoundSmall}",
              "height": "408dp",
              "grow": 1,
              "paddingTop": "5vh",
              "paddingBottom": "5vh",
              "item": {
                "type": "Sequence",
                "width": "100vw",
                "numbered": true,
                "data": "${languages}",
                "items": [
                  {
                    "type": "TouchWrapper",
                    "spacing": "10dp",
                    "item": {
                      "type": "Container",
                      "alignItems": "center",
                      "justifyContent": "center",
                      "direction": "row",
                      "paddingBottom": "10dp",
                      "items": [
                        {
                          "type": "Image",
                          "height": "@flagHeight",
                          "width": "@flagWidth",
                          "source": "https://decompil3d.github.io/county/${data.code}.svg"
                        },
                        {
                          "type": "Text",
                          "text": "${data.name}",
                          "fontSize": "@bodySize",
                          "spacing": "5dp"
                        }
                      ]
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": [
                        "choosePage",
                        "${ordinal}"
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "items": [
          {
            "type": "Container",
            "position": "absolute",
            "top": 0,
            "left": 0,
            "width": "100vw",
            "height": "100vh",
            "items": [
              {
                "type": "Image",
                "overlayColor": "#FFFFFFCC",
                "scale": "best-fill",
                "height": "100vh",
                "width": "100vw",
                "source": "https://decompil3d.github.io/county/bg.jpg"
              }
            ]
          },
          {
            "type": "Container",
            "height": "100vh",
            "items": [
              {
                "type": "Frame",
                "when": "${@viewportProfile != @hubRoundSmall}",
                "backgroundColor": "@accent",
                "height": "2vh",
                "width": "100vw"
              },
              {
                "type": "HomePage",
                "languages": "${payload.home.properties.languages}",
                "width": "100vw",
                "grow": 1
              }
            ]
          }
        ]
      }
    ]
  }
}